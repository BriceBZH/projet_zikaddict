{% extends "base.html.twig" %}

{% block main %}
    <section class="artist">
        <h1>
            Liste des albums de {{artist.getName()}}
        </h1>
        {% for album in albums %}
            <article class=$class>
                <h2>{{album.getTitle()}}</h2>
                <p><a href="index.php?route=album&idAlbum={{album.getId()}}">Plus</a>
            </article>
        {% endfor %}
    </section>
{% endblock %}
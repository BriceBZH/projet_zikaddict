{% extends "base.html.twig" %}

{% block body %}
    <main id="container" class="cards">
        <h2>
            Liste des chansons de  l'album {{album.getTitle()}}
        </h2>
        <ul>
            {% for song in songs %}
                <li>
                    <article>
                        <h3>{{song.getTitle()}}</h3>
                        <p><a href="{{ path('song', {idSong: song.id}) }}">Plus</a>
                    </article>
                </li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}
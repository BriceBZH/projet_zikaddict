{% extends "base.html.twig" %}

{% block title %}
    Albums
    {{ parent() }}
{% endblock %}

{% block body %}
    <main id="container" class="list_albums">
        <h2>
            Liste des albums
        </h2>
        <ul>
            {% for album in albums %}
                <li data-image-url="{{ asset('imgs/' ~ album.media.url) }}" data-image-alt="{{ album.media.alt }}">
                    <article onclick="window.location='{{ path('album', {idAlbum: album.id}) }}';">
                        <h3>{{album.getTitle()}}</h3>
                        {% set currentRoute = app.request.attributes.get('_route') %}
                        <a href="{{ path('add_collection', {idAlbum: album.id, idUser: app.user.id, returnUrl: currentRoute}) }}" class="collec"><img src="{{ asset('imgs/collec.png')}}" alt="collection" /></a>
                        <p><a href="{{ path('album', {idAlbum: album.id}) }}">Plus</a>
                    </article>
                </li>
            {% endfor %}
        </ul>
    </main>
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
{% extends "base.html.twig" %}

{% block title %}
    Albums
    {{ parent() }}
{% endblock %}

{% block main %}
    <section class="list_albums">
        <h1>
            Liste des albums
        </h1>
        {% for album in albums %}
            <article class=$class>
                <h2>{{album.getTitle()}}</h2>
                <p><a href="index.php?route=album&idAlbum={{album.getId()}}">Plus</a>
            </article>
        {% endfor %}
    </section>
{% endblock %}